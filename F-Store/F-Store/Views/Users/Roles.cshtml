<!--No se usa el IEnum porque solo recibe un objeto y no una lista-->
@model F_Store.ModelView.UserView

@{
    ViewBag.Title = "Roles";
}

<h2>Roles for user: @Model.Name</h2>

<p>
    @Html.ActionLink("Add Role", "AddRole", new { userID = Model.UserID }, new { @class = "btn btn-primary" }) <!-- Se le pasa lo del usuario-->
    @Html.ActionLink("Back to list", "Index", new { }, new { @class = "btn btn-danger" })
</p>
<table class="table">
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { userID = Model.UserID, roleID = Model.Roles[i].RoleID }) 
            </td>
        </tr>
    }
</table>
